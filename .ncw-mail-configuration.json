  "components": {
    "schemas": {
      "MailCreateData": {
        "type": "object",
        "properties": {
          "nextcloudUserId": {
            "type": "string",
            "description": "userid in UUID format of the Nextcloud user account to which the mail account should be created",
            "example": "myNextcloudUserId",
            "minLength": 1
          },
          "localPart": {
            "type": "string",
            "description": "the local part of the mail address (without @domain.tld)",
            "example": "hugo.van.test",
            "minLength": 1
          }
        },
        "required": [
          "localPart",
          "nextcloudUserId"
        ]
      },
      "Imap": {
        "type": "object",
        "properties": {
          "host": {
            "type": "string"
          },
          "port": {
            "type": "integer",
            "format": "int32"
          },
          "sslMode": {
            "type": "string"
          }
        }
      },
      "MailAccountResponse": {
        "type": "object",
        "properties": {
          "password": {
            "type": "string",
            "description": "The generated app password for the mail account.",
            "example": "aB3x!9kLmPq2"
          },
          "email": {
            "type": "string",
            "description": "The email address of the created mail account.",
            "example": "abc@something.net"
          },
          "nextcloudUserId": {
            "type": "string",
            "description": "The Nextcloud user ID associated with the mail account.",
            "example": "nc_1234567890abcdef"
          },
          "server": {
            "$ref": "#/components/schemas/MailServer",
            "description": "The configuration for smtp and imap servers.",
            "example": {
              "smtpServer": "smtp.example.com",
              "smtpPort": 587,
              "imapServer": "imap.example.com",
              "imapPort": 993,
              "useSsl": true
            }
          }
        }
      },
      "MailServer": {
        "type": "object",
        "properties": {
          "imap": {
            "$ref": "#/components/schemas/Imap"
          },
          "smtp": {
            "$ref": "#/components/schemas/Smtp"
          }
        }
      },
      "Smtp": {
        "type": "object",
        "properties": {
          "host": {
            "type": "string"
          },
          "port": {
            "type": "integer",
            "format": "int32"
          },
          "sslMode": {
            "type": "string"
          }
        }
      },
      "ErrorMessage": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "requestId": {
            "type": "string"
          }
        }
      },
      "PatchMailRequest": {
        "type": "object",
        "properties": {
          "op": {
            "type": "string",
            "enum": [
              "replace"
            ]
          },
          "path": {
            "type": "string",
            "enum": [
              "/mailaddress",
              "/userpassword",
              "/servicepassword"
            ]
          },
          "value": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "op",
          "path",
          "value"
        ]
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "name": "basicAuth",
        "scheme": "basic"
      }
    }
  }
